<form asp-controller="Sales" asp-action="Index">
    <p>
        Search by name: <input type="text" name="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>
<div class="row">
    <div class="d-flex justify-content-between">
        <div class="align-self-end">
            <form class="mt-3" asp-controller="sales" method="get" asp-action="Index">
                <p>
                    <select id="select" asp-items="@ViewBag.Customers">
                        <option selected="true" disabled="disabled">
                            Выбрать Покупателя
                        </option>
                    </select>
                </p>
            </form>
        </div>

        <div class="align-self-end mb-3">
            <a class="btn btn-success " asp-action="Create">
                Create Sale
            </a>
        </div>
    </div>

    <div class="px-4 pb-4">
        <ejs-grid id="products-list"
                  dataSource="@ViewBag.Sales"
                  gridLines="Vertical"
                  allowSorting="true">
            <e-grid-pagesettings pageSize="10"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Id" field="Id" typeof="text"></e-grid-column>
                <e-grid-column headerText="Sale Date" field="Date" typeof="text"></e-grid-column>
                <e-grid-column headerText="CustomerId" field="CustomerId" typeof="text"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
</div>


