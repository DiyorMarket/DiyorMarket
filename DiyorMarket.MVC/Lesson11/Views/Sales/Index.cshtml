<form asp-controller="Sales" asp-action="Index">
    <p>
        Search by name: <input type="text" name="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>
<div class="row">
    <div class="d-flex justify-content-between">
        <div class="align-self-end">
            <form class="mt-3" asp-controller="sales" method="get" asp-action="Index">
                <p>
                    <select class="form-control" name="customerId">
                        <option value="" selected disabled>Select Customer</option>
                        @foreach (var customer in ViewBag.Customers)
                        {
                            <option value="@customer.Id">@customer.FullName</option>
                        }
                    </select>
                </p>
            </form>
        </div>

        <div class="align-self-end mb-3">
            <a class="btn btn-success " asp-action="Create">
                Create Sale
            </a>
        </div>
    </div>

    <div class="px-4 pb-4">
        <ejs-grid id="products-list"
                  dataSource="@ViewBag.Sales"
                  gridLines="Vertical"
                  allowSorting="true">
            <e-grid-columns>
                <e-grid-column headerText="Id" field="Id" typeof="text"></e-grid-column>
                <e-grid-column headerText="Sale Date" field="SaleDate" format="dd/MM/yyyy, HH:mm:ss" typeof="text"></e-grid-column>
                <e-grid-column headerText="Total price" field="TotalDue" typeof="text"></e-grid-column>
                <e-grid-column headerText="Customer" field="Customer.FullName" typeof="text"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>

    <div class="d-flex justify-content-between">
        <div class="p-2">
            @if (ViewBag.HasPreviousPage)
            {
                <a class="btn btn-outline-primary rounded-left" href="@Url.Action("Index", new { pageNumber = 1})">&lt;&lt;</a>
            }

            @if (ViewBag.HasPreviousPage)
            {
                <a class="btn btn-outline-primary rounded-0" href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage - 1})">&lt;</a>
            }

            <button type="button" class="btn btn-primary btn-lg rounded-0" disabled>@ViewBag.CurrentPage</button>

            @if (ViewBag.HasNextPage)
            {
                <a class="btn btn-outline-primary rounded-0" href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage + 1})">&gt;</a>
            }

            @if (ViewBag.HasNextPage)
            {
                <a class="btn btn-outline-primary rounded-right" href="@Url.Action("Index", new { pageNumber = ViewBag.PageCount })">&gt;&gt;</a>
            }
        </div>
        <div class="p-2">
            <p class="h6">@ViewBag.CurrentPage of @ViewBag.PageCount pages (@ViewBag.TotalCount items)</p>
        </div>
    </div>
</div>


