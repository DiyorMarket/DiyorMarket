@model Lesson11.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DataGridLayout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/animation.css" />
</head>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/dashboard/index"><i class="fa fa-home" style="color: white"></i></a></li>
        <li class="breadcrumb-item"><a href="/Products/index">Products List</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
</nav>
<hr class="align-items-baseline" style="margin-top: 100px" />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SalePrice" class="control-label"></label>
                    <input asp-for="SalePrice" class="form-control" />
                    <span asp-validation-for="SalePrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SupplyPrice" class="control-label"></label>
                    <input asp-for="SupplyPrice" class="form-control" />
                    <span asp-validation-for="SupplyPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExpireDate" class="control-label"></label>
                    <input asp-for="ExpireDate" class="form-control" />
                    <span asp-validation-for="ExpireDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label mt-2"></label>
                    <select asp-for="CategoryId" class="form-control border border-dark" asp-items="@ViewBag.Categories"></select>
                </div>
              <div class="form-group  mt-3">
                <a asp-action="Index" class="btn btn-outline-info">
                    <i class="fa-solid fa-arrow-left-long"></i>
                    Back
                </a>
                <button class="btn btn-outline-success mr-auto">
                    <i class="fa fa-plus"></i> Create
                </button>
              </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
