<form asp-controller="Products" asp-action="Index">
    <div class="d-flex justify-content-between m-3">
        <p>
            <input type="text" name="searchString" />
            <input type="submit" value="Search" />

            <form asp-controller="products" method="get" asp-action="Index">
                <p class="mr-5">
                    <ejs-dropdownlist id="category" dataSource="@ViewBag.Categories"
                    placeholder="Select Category" allowFiltering="true" name="categoryId">
                        <e-dropdownlist-fields value="Id" text="Name"></e-dropdownlist-fields>
                    </ejs-dropdownlist>
                </p>
            </form>
        </p>
        
        <div class="align-self-end mb-3">
            <a class="btn btn-success " asp-action="Create">
                Create Product
            </a>
        </div>
    </div>
</form>
<div class="row">
    <div class="px-4 pb-4">
        <ejs-grid id="products-list"
                  dataSource="@ViewBag.Products"
                  gridLines="Vertical" allowPaging="true"
                  allowSorting="true">
            <e-grid-pagesettings pageSize="15"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Id" field="Id" typeof="text"></e-grid-column>
                <e-grid-column headerText="Name" field="Name" typeof="text"></e-grid-column>
                <e-grid-column headerText="Description" field="Description" typeof="text"></e-grid-column>
                <e-grid-column headerText="Sale Price" field="SalePrice" typeof="text"></e-grid-column>
                <e-grid-column headerText="Supply Price" field="SupplyPrice" typeof="text"></e-grid-column>
                <e-grid-column headerText="CategoryId" field="CategoryId" typeof="text"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
</div>


