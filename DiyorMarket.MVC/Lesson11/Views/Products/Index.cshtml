@model Lesson11.Models.Customer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DataGridLayout.cshtml";
}
<!-- Navigation link -->
<nav aria-label="breadcrumb" style="margin-left: 20px;">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/dashboard/index"><i class="fa fa-home" style="color: white"></i></a></li>
        <li class="breadcrumb-item active" aria-current="page">Products List</li>
    </ol>
</nav>
<form asp-controller="Products" asp-action="Index" class="mb-2">
    <input type="hidden" name="prevCategoryId" value="@ViewBag.SelectedCategory?.Id" />
    <div class="row" style="margin-top: 50px;">
        <div class="d-flex flex-row align-items-start gap-4">
                <!-- Search -->
                <div class="col-md-3 mb-4">
                    <div class="input-group">
                        <input type="hidden" name="prevCategoryId" value="@ViewBag.SelectedCategory?.Id" />
                        <input type="text" class="form-control" placeholder="Search product..." name="searchString" value="@ViewBag.SearchString">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-search"></i> Search
                            </button>
                        </div>
                    </div>
                </div>
                <!-- Filter -->
                <div class="col-md-3">
                    <div class="input-group">
                        <select class="form-control" name="categoryId">
                            <option value="" selected disabled>@ViewBag.SelectedCategory.Name</option>
                            @foreach (var category in ViewBag.Categories)
                            {
                                <option value="@category.Id" selected="@(category.Id == ViewBag.categoryId)">
                                    @category.Name
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <!-- Date -->
                <div class="col-md-2">
                    <input type="date" name="expireDate" class="form-control">
                </div>
                <!-- Action Buttons -->
                <div class="d-flex" style="gap: 15px; margin-left:auto">
                <div class="dropdown">
                    <button class="btn btn-outline-info dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa-solid fa-download"></i> Download
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" asp-action="download" asp-route-type="xls">
                            <i class="fa-solid fa-file-excel"></i> Xls
                        </a>
                        <a class="dropdown-item" asp-action="download" asp-route-type="pdf">
                            <i class="fa-solid fa-file-pdf"></i> Pdf
                        </a>
                    </div>
                </div>
                <a class="btn btn-success" asp-action="create">
                    <i class="fa fa-plus"></i> Create
                </a>
            </div>
            </div>
        </div>
    </div>
</form>


<div class="row">
</div>
<div class="col-12">
    <ejs-grid id="products-list"
              dataSource="@ViewBag.Products"
              gridLines="Vertical"
              allowSorting="true">
        <e-grid-columns>
            <e-grid-column headerText="Id" field="Id" template="#template" typeof="Text"></e-grid-column>
            <e-grid-column headerText="Name" field="Name" typeof="text"></e-grid-column>
            <e-grid-column headerText="Description" field="Description" typeof="text"></e-grid-column>
            <e-grid-column headerText="Sale Price" field="SalePrice" typeof="number" format="C2"></e-grid-column>
            <e-grid-column headerText="Supply Price" field="SupplyPrice" typeof="number" format="C2"></e-grid-column>
            <e-grid-column headerText="Expire Date" field="ExpireDate" format="dd/MM/yyyy, HH:mm:ss" typeof="text"></e-grid-column>
            <e-grid-column headerText="Category" field="Category.Name" typeof="text"></e-grid-column>
        </e-grid-columns>
    </ejs-grid>
</div>


<div class="d-flex justify-content-between">
    <div class="p-2" style="font-size: 14px;">

        @if (ViewBag.HasPreviousPage)
        {
            <a class="btn btn-outline-primary rounded-left" href="@Url.Action("Index", new { pageNumber = 1 })">&lt;&lt;</a>
        }

        @if (ViewBag.HasPreviousPage)
        {
            <a class="btn btn-outline-primary rounded-right" href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage - 1})">@(@ViewBag.CurrentPage - 1)</a>
        }

        <button type="button" class="btn btn-primary rounded-right" disabled>@ViewBag.CurrentPage</button>

        @if (ViewBag.HasNextPage)
        {
            <a class="btn btn-outline-primary rounded-right" href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage + 1})">@(@ViewBag.CurrentPage + 1)</a>
        }

        @if (ViewBag.CurrentPage <= 1)
        {
            <a class="btn btn-outline-primary rounded-right" href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage + 2})">@(@ViewBag.CurrentPage + 2)</a>
        }

        @if (ViewBag.HasNextPage)
        {
            <a class="btn btn-outline-primary rounded-right" href="@Url.Action("Index", new { pageNumber = ViewBag.PageCount })">&gt;&gt;</a>
        }

    </div>

    <div class="p-2">
        <p class="h6">@ViewBag.CurrentPage of @ViewBag.PageCount pages (@ViewBag.TotalCount items)</p>
    </div>
</div>


<script id="template" type="text/x-template">
    <div>
        <a rel='nofollow' href="products/Details/${Id}">${Id}</a>
    </div>
</script>

