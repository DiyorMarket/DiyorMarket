@model Lesson11.Models.Supplier

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DataGridLayout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/animation.css" />
</head>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/dashboard/index"><i class="fa fa-home" style="color: white"></i></a></li>
        <li class="breadcrumb-item"><a href="/Suppliers/index">Suppliers List</a></li>
        <li class="breadcrumb-item"><a href="/Suppliers/details/@Model.Id">Details</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>
<hr class="align-items-baseline" style="margin-top: 100px" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" value="@Model.FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" value="@Model.LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company" class="control-label"></label>
                <input asp-for="Company" value="@Model.Company" class="form-control" />
                <span asp-validation-for="Company" class="text-danger"></span>
            </div>
            <!-- Buttons -->
            <div class="form-group mt-3">
                <a asp-action="Index" class="btn btn-outline-info">
                   <i class="fa-solid fa-arrow-left-long"></i>
                    Back
                </a>
                <button class="btn btn-outline-success">
                    <i class="fa fa-pencil"></i> Save
                </button>
            </div>
        </form>
    </div>
</div> <!-- Buttons -->
<div class="form-group mt-3">
    <a asp-action="Index" class="btn btn-outline-info">
        <i class="fa-solid fa-arrow-left-long"></i>
        Back
    </a>
    <button class="btn btn-outline-success">
        <i class="fa fa-pencil"></i> Save
    </button>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
