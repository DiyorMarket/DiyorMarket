
<div class="container">
    <form asp-controller="Supplies" asp-action="Index" class="mb-2">
        <input type="hidden" name="prevCategoryId" value="@ViewBag.SelectedCategory?.Id" />
        <div class="container">
            <div class="row row-cols-sm-1 align-items-center">
                <div class="d-flex flex-row justify-content-center gap-4">
                    <!-- Search -->
                    <form asp-controller="Products" asp-action="Index">
                        <div class="col-md-5 mb-4 ml-12 mr-10">
                            <div class="input-group">
                                <input type="hidden" name="prevCategoryId" value="@ViewBag.SelectedCategory?.Id" />
                                <input type="text" class="form-control" placeholder="Search product..." name="searchString" value="@ViewBag.SearchString">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fa fa-search"></i> Search
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- Filter -->
                    <div class="col-md-3 mb-3 ml-4">
                        <div class="input-group">
                            <select class="form-control" name="supplierId">
                                <option value="" selected disabled>@ViewBag.SelectedSupplier.Company</option>
                                @* @foreach (var category in ViewBag.Suppliers)
                                {
                                    <option value="@supplier.Id" selected="@(category.Id == ViewBag.categoryId)">
                                        @category.Name
                                    </option>
                                }
                                <option value="" selected disabled>  All Suppliers </option> *@
                                @foreach (var supplier in ViewBag.Suppliers)
                                {
                                    <option value="@supplier.Id" selected="@(supplier.Id == ViewBag.supplierId)">
                                        @supplier.Company
                                    </option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                @* filtr *@
                <div class="col-md-4">
                    <div class="input-group">
                        <select class="form-control" name="supplierId">
                            <option value="" selected disabled>  All Suppliers </option>
                            @foreach (var supplier in ViewBag.Suppliers)
                            {
                                <option value="@supplier.Id">@supplier.FirstName</option>
                            }
                        </select>
                    </div>
                </div>

                <div style="margin-top: -2px;">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-search"></i> Search
                    </button>
                </div>
            </div>
        </div>
    </form>

    @* data grid *@
    <div class="row">
        <div class="d-flex flex-row mt-5 mb-2 flex-row-reverse" style="gap: 10px;">
            <a class="btn btn-success mr-auto" asp-action="create">
                <i class="fa fa-plus"></i> Create
            </a>
            <a class="btn btn-outline-info" asp-action="upload">
                <i class="fa-solid fa-upload"></i> Upload
            </a>
            <a class="btn btn-outline-info" asp-action="download">
                <i class="fa-solid fa-download"></i> Download
            </a>
        </div>
        <div class="col-12">
            <ejs-grid id="products-list"
                      dataSource="@ViewBag.Supplies"
                      gridLines="Vertical"
                      allowSorting="true">
                <e-grid-columns>
                    <e-grid-column headerText="Id" field="Id" template="#template" typeof="text"></e-grid-column>
                    <e-grid-column headerText="Sale Date" field="SupplyDate" format=" dd/MM/yyyy , HH:mm:ss" typeof="text"></e-grid-column>
                    <e-grid-column headerText="Total price" field="TotalDue" format="C2" typeof="text"></e-grid-column>
                    <e-grid-column headerText="SupplierId" field="Supplier.FirstName" typeof="text"></e-grid-column>
                </e-grid-columns>
            </ejs-grid>
        </div>
    </div>

    @* pagineted *@
    <div class="d-flex justify-content-between">
        <div class="p-2">
            @if (ViewBag.HasPreviousPage)
            {
                <a class="btn btn-outline-primary rounded-left" href="@Url.Action("Index", new { pageNumber = 1 })">&lt;&lt;</a>
            }

            @if (ViewBag.HasPreviousPage)
            {
                <a class="btn btn-outline-primary rounded-right" href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage - 1})">@(@ViewBag.CurrentPage - 1)</a>
            }

            <button type="button" class="btn btn-outline-primary rounded-right" disabled>@ViewBag.CurrentPage</button>

            @if (ViewBag.HasNextPage)
            {
                <a class="btn btn-outline-primary rounded-right" href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage + 1})">@(@ViewBag.CurrentPage + 1)</a>
            }

            @if (ViewBag.CurrentPage <= 1)
            {
                <a class="btn btn-outline-primary rounded-right" href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage + 2})">@(@ViewBag.CurrentPage + 2)</a>
            }

            @if (ViewBag.HasNextPage)
            {
                <a class="btn btn-outline-primary rounded-right" href="@Url.Action("Index", new { pageNumber = ViewBag.PageCount })">&gt;&gt;</a>
            }
        </div>
        <div class="p-2">
            <p class="h6">@ViewBag.CurrentPage of @ViewBag.PageCount pages (@ViewBag.TotalCount items)</p>
        </div>
    </div>

</div>

<script id="template" type="text/x-template">
    <div>
        <a rel='nofollow' href="supplies/Details/${Id}">${Id}</a>
    </div>
</script>


