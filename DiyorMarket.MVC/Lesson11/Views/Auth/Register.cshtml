@model Lesson11.ViewModels.RegisterViewModel

@{
	ViewData["Title"] = "Register";
	Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<form asp-action="Register" method="post" class="align-items-center">
    <div class="form-group">
        <label for="exampleInputFullName">Full Name</label>
        <input asp-for="FullName" class="form-control w-50 mb-3" id="exampleInputFullName" placeholder="Enter full name">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputPhone">Phone</label>
        <input asp-for="Phone" class="form-control w-50 mb-3" id="exampleInputPhone" placeholder="Enter phone number">
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail">Email address</label>
        <input asp-for="Login" class="form-control w-50 mb-3" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter email">
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword">Password</label>
        <input asp-for="Password" type="password" class="form-control w-50 mb-3" id="exampleInputPassword" placeholder="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputRepeatPassword">RepeatPassword</label>
        <input asp-for="RepeatPassword" type="password" class="form-control w-50 mb-3" id="exampleInputRepeatPassword" placeholder="RepeatPassword">
        <span asp-validation-for="RepeatPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary w-25 mb-5">Register</button>
</form>